{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "prConcurrentLimit": 20,
  "prHourlyLimit": 10,
  "kubernetes": {
    "managerFilePatterns": [
      "/argocd/.+\\.yaml$/"
    ]
  },
  "argocd": {
    "managerFilePatterns": [
      "/argocd/apps/.+\\.yaml$/"
    ]
  },
  "packageRules": [
    {
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "matchCurrentVersion": "!/^0/",
      "automerge": true
    }
  ]
}
