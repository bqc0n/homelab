{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "prConcurrentLimit": 20,
  "prHourlyLimit": 10,
  "kubernetes": {
    "fileMatch": ["argocd/.+\\.yaml$"]
  },
  "argocd": {
    "fileMatch": ["argocd/apps/.+\\.yaml$"]
  },
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch"],
      "matchCurrentVersion": "!/^0/",
      "automerge": true
    }
  ]
}
